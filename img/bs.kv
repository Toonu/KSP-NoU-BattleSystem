<WelcomeScreen>
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'IS.png'
            size: self.texture_size
            size_hint_y: 3
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 2
            Image:
                id: image
                source: 'Air.png'
                size: self.texture_size
                size_hint_x: 1
            Label:
                id: welcome_label
                haling: "center"
                valign: "center"
                text: str(root.welcome_message)
                size_hint_x: 3
            Image:
                id: image
                source: 'Navy.png'
                size: self.texture_size
                size_hint_x: 1
        GridLayout:
            height: 50
            cols:4
            size_hint_y: None
            Widget:
                size_hint_x: 1
            Label:
                text: f"Specify default battle year {root.years[0]} - {root.years[1]}"
                text_size: self.size
                halign: "right"
                valign: "center"
                size_hint_x: 2
            TextInput:
                id: years_text_input
                halign: "center"
                multiline: False
                on_text:
                    app.align_text(self)
                    root.blinker(self, years_text_input_result, root.years[0], root.years[1])
                size_hint_x: 2
            Label:
                id: years_text_input_result
                size_hint_x: 1
        GridLayout:
            height: 50
            cols:4
            size_hint_y: None
            Widget:
                size_hint_x: 1
            Label:
                text: "Side 1: "
                text_size: self.size
                halign: "right"
                valign: "center"
                size_hint_x: 3
            TextInput:
                id: side_1
                halign: "center"
                multiline: False
                on_text:
                    app.align_text(self)
                    root.blinker(self, side_1_result, maximum=99)
                size_hint_x: 1
            Label:
                id: side_1_result
                size_hint_x: 1
        GridLayout:
            height: 50
            cols:4
            size_hint_y: None
            Widget:
                size_hint_x: 1
            Label:
                text: "Side 2: "
                text_size: self.size
                halign: "right"
                valign: "center"
                size_hint_x: 3
            TextInput:
                id: side_2
                multiline: False
                halign: "center"
                on_text:
                    app.align_text(self)
                    root.blinker(self, side_2_result, maximum=99)
                size_hint_x: 1
            Label:
                id: side_2_result
                size_hint_x: 1
        GridLayout:
            height: 50
            cols:3
            size_hint_y: None
            Label:
                size_hint_x: 1
            Button:
                id: confirm
                text: "Finish"
                on_press:
                    root.check(years_text_input, side_1, side_2, confirm_label)
                size_hint_x: 4
            Label:
                id: confirm_label
                size_hint_x: 1

<OOB>
    BoxLayout:
        id: oob_box
        orientation: "vertical"
        Label:
            text: f"Asset Configuration Editor\n{(root.asset).capitalize()}"
            valign: "center"
            size_hint_y: 1

        Accordion:
            orientation: "horizontal"
            size_hint_y: 5
            id: oob_accordion
            AccordionItem:
                title: "Ground Vehicles"
                BoxLayout:
                    ToggleButton:
                        id: 1-1
                        text: 'MBT'
                        group: 'type'
                    ToggleButton:
                        id: 1-2
                        text: 'AFV'
                        group: 'type'
                    ToggleButton:
                        id: 1-3
                        text: 'IFV'
                        group: 'type'
                    ToggleButton:
                        id: 1-4
                        text: 'APC'
                        group: 'type'
                    ToggleButton:
                        id: 1-5
                        text: 'SAM'
                        group: 'type'
                    ToggleButton:
                        id: 1-6
                        text: 'MLB'
                        group: 'type'
            AccordionItem:
                title: "Aerial Vehicles"
                BoxLayout:
                    ToggleButton:
                        id: 2-1
                        text: "Small\nMultirole\nPlane"
                        halign: "center"
                        group: 'type'
                    ToggleButton:
                        id: 2-2
                        text: "Medium\nMultirole\nPlane"
                        halign: "center"
                        group: 'type'
                    ToggleButton:
                        id: 2-3
                        text: "Large\nMultirole\nPlane"
                        halign: "center"
                        group: 'type'
                    ToggleButton:
                        id: 2-4
                        text: "Large\nAirframe\nPlane"
                        halign: "center"
                        group: 'type'
                    ToggleButton:
                        id: 2-5
                        text: "Very\nLarge\nAirframe\nPlane"
                        halign: "center"
                        group: 'type'
            AccordionItem:
                title: "Naval Vehicles"
                BoxLayout:
                    ToggleButton:
                        id: 3-1
                        text: "Corvette"
                        halign: "center"
                        group: 'type'
                        size_hint_x: 2.2
                    ToggleButton:
                        id: 3-2
                        text: "Frigate"
                        halign: "center"
                        group: 'type'
                        size_hint_x: 2.2
                    ToggleButton:
                        id: 3-3
                        text: "Destroyer"
                        halign: "center"
                        group: 'type'
                        size_hint_x: 2.2
                    ToggleButton:
                        id: 3-4
                        text: "Cruiser"
                        halign: "center"
                        group: 'type'
                        size_hint_x: 2.2
                    ToggleButton:
                        id: 3-5
                        text: "Battlecruiser"
                        halign: "center"
                        group: 'type'
                        size_hint_x: 3.5
                    ToggleButton:
                        id: 3-6
                        text: "Battleship"
                        halign: "center"
                        group: 'type'
                        size_hint_x: 3.5
                    ToggleButton:
                        id: 3-7
                        text: "Light\nCarrier"
                        halign: "center"
                        group: 'type'
                        size_hint_x: 2
                    ToggleButton:
                        id: 3-8
                        text: "Aircraft\nCarrier"
                        halign: "center"
                        group: 'type'
                        size_hint_x: 2
        BoxLayout:
            orientation: "vertical"
            size_hint_y: 2
            Label:
                text: f"If the vehicle is not from year{root.def_year}, input new value, else leave blank"
            TextInput:
                id: years_changer
                on_text:
                    app.align_text(self)
            Button:
                text: "Next"
                on_release: next(years_changer)
