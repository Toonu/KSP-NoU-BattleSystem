<Interface>
    BoxLayout:
        orientation: 'vertical'
        Image:
            id: image
            source: 'IS.ico'
            size: self.texture_size
            size_hint_y: 3
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 2
            Image:
                id: image
                source: 'Air.png'
                size: self.texture_size
                size_hint_x: 1
            Label:
                id: welcome_label
                haling: "center"
                valign: "center"
                text: str(root.welcome_message)
                size_hint_x: 3
            Image:
                id: image
                source: 'Navy.png'
                size: self.texture_size
                size_hint_x: 1
        GridLayout:
            height: 50
            cols:4
            size_hint_y: None
            Widget:
                size_hint_x: 1
            Label:
                text: f"Specify default battle year {root.years[0]} - {root.years[1]}"
                text_size: self.size
                halign: "right"
                valign: "center"
                size_hint_x: 2
            TextInput:
                id: years_text_input
                halign: "center"
                multiline: False
                on_text:
                    app.align_text(self)
                size_hint_x: 2
            Label:
                id: years_text_input_result
                size_hint_x: 1
        GridLayout:
            height: 50
            cols:4
            size_hint_y: None
            Widget:
                size_hint_x: 1
            Label:
                text: "Side 1: "
                text_size: self.size
                halign: "right"
                valign: "center"
                size_hint_x: 3
            TextInput:
                id: side_1
                halign: "center"
                multiline: False
                on_text:
                    app.align_text(self)
                size_hint_x: 1
            Label:
                id: side_1_result
                size_hint_x: 1
        GridLayout:
            height: 50
            cols:4
            size_hint_y: None
            Widget:
                size_hint_x: 1
            Label:
                text: "Side 2: "
                text_size: self.size
                halign: "right"
                valign: "center"
                size_hint_x: 3
            TextInput:
                id: side_2
                multiline: False
                halign: "center"
                on_text:
                    app.align_text(self)
                size_hint_x: 1
            Label:
                id: side_2_result
                size_hint_x: 1
        GridLayout:
            height: 50
            cols:3
            size_hint_y: None
            Label:
                size_hint_x: 1
            Button:
                id: confirm
                text: "Finish"
                # on_state: print("my current state is {}".format(self.state))
                # on_press: self.background_down = "True"
                size_hint_x: 4
            Label:
                size_hint_x: 1